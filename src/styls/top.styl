@import'nib'
$val=#001580
$lav=#806b00    
#top 
    padding 1rem 1rem 0 
    // background: linear-gradient(160deg, rgba(128,107,0,0.5), rgba(128,107,0,0.5) 60%, #806b00 60%, #806b00);
    background darken($val,60%)
    // border-bottom 1px solid $lav
    margin-top 3rem
    .flext
        align-items flex-end
        .half:nth-child(1)
            // background-image url('./img/dozerlf.png')
            // background-repeat no-repeat
            // background-size 400px auto
            // background-position left center
            padding-bottom 3rem
            margin-bottom 0
            align-self flex-start
        .half:nth-child(2)
            background-image url('./img/dozer-f.png')
            background-repeat no-repeat
            background-size 360px auto
            background-position right bottom
            align-items center
            padding 3rem 0
            // border-bottom 1px solid $lav
            h3 
                margin-bottom 0

        .intro 
            padding 0
            margin-bottom 0
        .logo-wrap
            margin 2rem auto
            padding 0 1rem
            background rgba(255,255,255,0.4)
            box-shadow 12px 12px 18px rgba(255,255,255,0.3)            
        .logo 
            max-width 350px
            margin 0 auto

            // transform: perspective(400px) rotateY(30deg)
h1 
    // color $val
    font-size 2.4rem
    text-align center
    margin .2rem auto
.title-tag 
    color $lav
    font-size 2rem
    font-weight bold
    // padding 1rem 0
    text-align center
    margin-bottom 0
.quick-contact 
    color lighten($val,45%)
    font-size 1.6rem
    font-weight bold
    text-align center
    margin 0
.features       
    color lighten($lav,45%)
    line-height 1.4
    font-size 1.8rem
    text-align center
    padding 0
    margin-top 0
    font-weight normal 

@media screen and (min-width: 640px)  
    .quick-contact 
        padding 0
    .title-tag 
        text-align left
        font-size 1.5rem
    .features
        p
            font-size 1.6rem
            padding-left 2rem
            background transparent
            text-align left 

                
           