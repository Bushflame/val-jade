@import'nib'
$val=#001580
$lav=#806b00      
#majors 
    padding 3rem 1rem 
    // background rgba(complement($val),.2)
    background: linear-gradient(160deg, rgba(128,107,0,0.5), rgba(128,107,0,0.5) 60%, #806b00 60%, #806b00);
    background: linear-gradient(160deg, lighten($lav,15%), lighten($lav,15%) 60%, #806b00 60%, #806b00);
    .major:nth-child(1)
        padding 0 1rem
        text-align center
    header 
        max-width 740px
        margin auto
.hirers
    display flex
    flex-direction row
    justify-content space-between
    max-width 540px
    margin 1rem auto
    padding 0 1.5rem
.hirer
    width 28%
.major
    h3 
        color #fff
    padding 0
    position relative
    figure 
        margin 1rem
        
    figcaption 
        position absolute
        right 3.5rem
        bottom 2rem
        left 3.5rem            
        padding .4rem
        background #fff
        
        // box-shadow 6px 6px 12px rgba(0,0,0,.5)
        h3 
            text-align center
            color $val
            line-height 1
.major.logo 
    margin 0 auto
.major:nth-child(1)
    background rgba(complement($val),.5)
    color $val
    box-shadow 0 0 8px rgba(complement($val),.7)
    padding-bottom 2rem
@media screen and (min-width: 620px)    
    .major
        margin 0
        figure 
            margin 1.5rem        
    .major-grid 
        display grid
        max-width 960px
        margin auto
        grid-template-columns repeat(4, 1fr)
        grid-template-rows 2
        
        .major:nth-child(1)
            grid-column 1/5
            grid-row 1
            // align-self center
            text-align center
            font-size 1.4rem
        .major:nth-child(2)
            grid-column 1/3
            grid-row 2            
        .major:nth-child(3)
            grid-column 3/5
            grid-row 2
        .major:nth-child(4)
            grid-column 1/3
            grid-row 3
        .major:nth-child(5)
            grid-column 3/5
            grid-row 3        
        .major:nth-child(6)
            grid-column 2/4
            grid-row 4

@media screen and (min-width: 1020px)
    .major.logo 
        margin none
        align-self end
    .major-grid 
        display grid
        max-width 1240px
        margin auto
        grid-template-columns repeat(6, 1fr)
        grid-template-rows 2

        .major:nth-child(1)
            grid-column 3/5
            grid-row 1
            text-align center
        .major:nth-child(2)
            grid-column 1/3
            grid-row 1            
        .major:nth-child(3)
            grid-column 5/7
            grid-row 1
        .major:nth-child(4)
            grid-column 3/5
            grid-row 2
        .major:nth-child(5)
            grid-column 1/3
            grid-row 2        
        .major:nth-child(6)
            grid-column 5/7
            grid-row 2


.end-majors
    color yellow 